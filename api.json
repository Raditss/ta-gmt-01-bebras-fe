  "servers": [],
  "components": {
    "securitySchemes": {
      "bearer": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "title": "Username",
            "example": "johndoe"
          },
          "password": {
            "type": "string",
            "title": "Password",
            "example": "Password1@"
          }
        },
        "required": ["username", "password"]
      },
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "title": "Username",
            "example": "johndoe"
          },
          "password": {
            "type": "string",
            "title": "Password",
            "example": "Password1@"
          },
          "name": {
            "type": "string",
            "title": "Name",
            "example": "John Doe"
          },
          "role": {
            "type": "string",
            "title": "Role",
            "example": "STUDENT",
            "enum": ["ADMIN", "STUDENT", "TEACHER"]
          }
        },
        "required": ["username", "password", "name", "role"]
      },
      "Create Question Request": {
        "type": "object",
        "properties": {
          "questionTypeId": {
            "type": "number",
            "title": "Question Type ID",
            "example": 1
          },
          "content": {
            "type": "string",
            "title": "Question Content (JSON String)",
            "example": "{\"rules\": [], \"startState\": \"\", \"endState\": \"\"}",
            "description": "Encapsulated content from ICreateQuestion implementation as JSON string"
          },
          "isPublished": {
            "type": "boolean",
            "title": "Is Published",
            "example": false
          },
          "title": {
            "type": "string",
            "title": "Question Title",
            "example": "Fish Trader Exercise"
          },
          "points": {
            "type": "number",
            "title": "Points",
            "example": 100
          },
          "estimatedTime": {
            "type": "number",
            "title": "Estimated Time (minutes)",
            "example": 30
          }
        },
        "required": [
          "questionTypeId",
          "content",
          "isPublished",
          "title",
          "points",
          "estimatedTime"
        ]
      },
      "Update Question Request": {
        "type": "object",
        "properties": {
          "questionTypeId": {
            "type": "number",
            "title": "Question Type ID",
            "example": 1
          },
          "content": {
            "type": "string",
            "title": "Question Content (JSON String)",
            "example": "{\"rules\": [], \"startState\": \"\", \"endState\": \"\"}",
            "description": "Encapsulated content from ICreateQuestion implementation as JSON string"
          },
          "isPublished": {
            "type": "boolean",
            "title": "Is Published",
            "example": false
          },
          "title": {
            "type": "string",
            "title": "Question Title",
            "example": "Fish Trader Exercise"
          },
          "points": {
            "type": "number",
            "title": "Points",
            "example": 100
          },
          "estimatedTime": {
            "type": "number",
            "title": "Estimated Time (minutes)",
            "example": 30
          }
        }
      },
      "Generate Question Request": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "title": "Question Type",
            "example": "cfg"
          }
        },
        "required": ["type"]
      },
      "Create Question Type Request": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "title": "Name",
            "example": "Decision Tree"
          },
          "description": {
            "type": "string",
            "title": "Description",
            "example": "Decision Tree"
          }
        },
        "required": ["name", "description"]
      },
      "Update Question Type Request": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "title": "Name",
            "example": "Decision Tree"
          },
          "description": {
            "type": "string",
            "title": "Description",
            "example": "Decision Tree"
          }
        }
      },
      "Create Question Attempt Request": {
        "type": "object",
        "properties": {
          "questionId": {
            "type": "number",
            "title": "Question ID",
            "example": 1
          }
        },
        "required": ["questionId"]
      },
      "Update Question Attempt Request": {
        "type": "object",
        "properties": {
          "questionId": {
            "type": "number",
            "title": "Question ID",
            "example": 1
          },
          "answer": {
            "type": "object",
            "title": "Answer",
            "example": {
              "answer": "answer"
            }
          }
        },
        "required": ["answer"]
      },
      "Save Draft Attempt Request": {
        "type": "object",
        "properties": {
          "questionId": {
            "type": "number",
            "title": "Question ID",
            "example": 1
          },
          "duration": {
            "type": "number",
            "title": "Duration in seconds",
            "example": 300
          },
          "answer": {
            "type": "object",
            "title": "Answer/Solution JSON",
            "example": {
              "steps": [],
              "currentState": []
            }
          }
        },
        "required": ["questionId", "duration"]
      },
      "Submit Attempt Request": {
        "type": "object",
        "properties": {
          "questionId": {
            "type": "number",
            "title": "Question ID",
            "example": 1
          },
          "duration": {
            "type": "number",
            "title": "Duration in seconds",
            "example": 300
          },
          "answer": {
            "type": "object",
            "title": "Answer/Solution JSON",
            "example": {
              "steps": [],
              "currentState": []
            }
          }
        },
        "required": ["questionId", "duration", "answer"]
      },
      "Check Answer Request": {
        "type": "object",
        "properties": {
          "questionId": {
            "type": "string",
            "title": "Question ID",
            "example": "fish-trader-abc123"
          },
          "type": {
            "type": "string",
            "title": "Question Type",
            "example": "fish-trader"
          },
          "duration": {
            "type": "number",
            "title": "Duration in seconds",
            "example": 300
          },
          "solution": {
            "type": "string",
            "title": "Solution JSON",
            "example": "{\"steps\": [], \"currentState\": []}"
          }
        },
        "required": ["questionId", "type", "duration", "solution"]
      }
    }
  }
}
